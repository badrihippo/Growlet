<Page
  class="page"
  navigatingTo="onNavigatingTo"
  xmlns="http://www.nativescript.org/tns.xsd">

  <Page.ActionBar>
    <ActionBar title="Details" class="action-bar">
      <NavigationButton icon="res://ic_close_white_24dp" tap="onBackButtonTap"/>
      <ActionItem tap="onEditTap" icon="res://ic_mode_edit_white_24dp"/>
    </ActionBar>
  </Page.ActionBar>

  <StackLayout>
  <Label text="{{ title }}" class="h1"/>
  <Label text="Authors" class="bold"/>
  <Label text="{{ authors }}"/>
  <Label text="Genre" />
  <Label text="{{ genre }}" />
  <Label text="Publisher" />
  <Label text="{{ publisher }}"/>
  <Label text="Binding" />
  <Label text="{{ binding_type }}" />
  <Label text="Price" />
  <Label text="{{ price }}"/>
  <Label text="Added on" />
  <Label text="{{ date_added }}" />

  </StackLayout>
</Page>
